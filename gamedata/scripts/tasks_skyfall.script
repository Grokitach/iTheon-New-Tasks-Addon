    vector = vector():set(-175.3620,5.3156,-182.4881),
    lvid = 46530,
    gvid = 1037
}, {
    vector = vector():set(-175.6865,5.3178,-183.3549),
    lvid = 46528,
    gvid = 1037
}, {
    vector = vector():set(-174.7610,5.3181,-183.0771),
    lvid = 47024,
